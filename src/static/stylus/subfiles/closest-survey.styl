@media (max-width: 375px)
    .closest-survey__table
        width 100%
    .calendar-button
        display none
    .closest-survey__place-data
        flex-direction column
    .closest-survey__button
        margin: 0 0 10px 30px

@media (min-width: 376px) and (max-width: 767px)
    .closest-survey__table
        width 100%
    .calendar-button
        display none
    .closest-survey__place-data
        flex-direction column
    .closest-survey__button
        margin: 0 0 10px 30px

@media (min-width: 768px) and (max-width: 991px)
    .closest-survey__table
        width 100%
    .calendar-button
        display none
    .closest-survey__button
        margin: 10px 30px 0 0 


@media (min-width: 992px) and (max-width: 1200px)
    .closest-survey__table
        width 100%
    .closest-survey__button
        margin: 10px 30px 0 0
 

@media (min-width: 1201px)
    .closest-survey__table
        width 45vw
    .closest-survey__button
        margin: 10px 30px 0 0 



.closest-survey
    margin-top: 30px

.closest-survey__caption
    font-weight: 500
    color: #37373F

.closest-survey__table
    table-layout fixed
    border-collapse collapse

.closest-survey__date-row
    border 1px solid #C7C7C7

.closest-survey__date-data
    padding 15px 0 15px 0px
    display flex
    align-items center 

.closest-survey__place-row
    border 1px solid #C7C7C7

.closest-survey__date-caption
    margin 0 15px 0 30px


.closest-survey__date-caption-medium
    font-weight 500

.calendar-button
    border 0.5px solid #C4C4C4
    border-radius 3px
    padding 7px

.closest-survey__place-row:last-child
    border-bottom-style hidden

.closest-survey__place-data
    display flex
    justify-content space-between

.closest-survey__time-interval, .closest-survey__price, .closest-survey__place-residue
    margin 10px 0 10px 30px

.closest-survey__price
    font-weight: 700

.closest-survey__button
    border 2px solid #FC9B09
    border-radius 3px
    padding 16px 33px 16px 33px
    max-width 60px

.closest-survey__button-caption
    color #FC9B09
    font-weight: 600
    font-size: 13px
    margin 0

.closest-survey__date-row
    padding 25px 0 25px 30px