@media (max-width: 375px)
    .header 
        padding-left 4vw
        padding-right 4vw
        
    .header__logo
        width 84px
        height 15px
    
    .header__telephone-caption, .header__telephone-number
        display none

    .header__geo-mod-display, .header__account-icon-mod-display
        display inline 

    .header_content
        justify-content space-between

@media (min-width: 376px) and (max-width: 767px)
    .header 
        padding-left 5vw
        padding-right 5vw
    
    .header__logo
        width 84px
        height 15px
    
    .header__telephone-caption, .header__telephone-number
        display none

    .header__geo-mod-display, .header__account-icon-mod-display
        display inline 
    
    .header_content
        justify-content space-between

@media (min-width: 768px) and (max-width: 991px)
    .header 
        padding-left 10vw
        padding-right 10vw

    .header__logo
        width 103px
        height 18px
    
    .header__telephone-caption, .header__telephone-number
        margin 0
        font-size 10px

    .header__geo-mod-display, .header__account-icon-mod-display
        display none
    

@media (min-width: 992px) and (max-width: 1200px)
    .header 
        padding-left 15vw
        padding-right 15vw
    
    .header__logo
        width 113px
        height 20px

    .header__telephone-caption, .header__telephone-number
        margin 0
        font-size 12px

    .header__geo-mod-display, .header__account-icon-mod-display
        display none
    
@media (min-width: 1201px)
    .header 
        padding-left 20vw
        padding-right 20vw

    .header__logo
        width 129px
        height 23px 
    
    .header__telephone-caption, .header__telephone-number
        margin 0
        font-size 12px

    .header__geo-mod-display, .header__account-icon-mod-display
        display none


.header_content
    height 10vh
    display flex
    align-items center

.header__geo 
    color #5286EC
    font-size 14px
    
.header__telephone-caption
    margin-left 3vw
    color #B3B3B3 
