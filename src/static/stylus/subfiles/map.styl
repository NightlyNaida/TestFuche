.map 
    width: 100vw

.map-mod
    margin-top 70px

.map-container
    width: 100%
    height 500px

.ymaps-2-1-74-copyrights-pane
    display none

.steps
    background-color #ffffff
    padding: 20px

.steps__step
    display flex
    align-items: center

.steps__circle
    width 62px
    height 62px
    background-image: url('svg/Ellipse.svg')
    background-size contain
    display flex
    justify-content center
    align-items: center

.steps__circle-text
    color: #ffffff
    margin: 0
    font-weight bold
    font-size 35px

.steps__text-container
    margin-left 15px

.steps__caption, .steps__text
    font-size 18px
    color #37373F

    margin 0 0 10px 0

.steps__caption
    font-weight: 500

.steps__link
    font-weight: 500
    font-size: 14px
    color: #5286EC
    margin 0